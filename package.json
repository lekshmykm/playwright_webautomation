{
  "name": "playwright_webautomation",
  "version": "1.0.0",
  "description": "Webautomation script using Playwright in typescript - page navigation, product identification, addtocart",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test --workers=1 && allure generate allure-results --clean && allure open",
    "test:headed": "npx playwright test --headed",
    "report": "npx playwright show-report",
    "postTest": "npx allure generate allure-results --clean -o allure-report && npx allure open allure-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lekshmykm/playwright_webautomation.git"
  },
